@model IEnumerable<Job>

@{
    JobRequest jobRequest = ViewBag.JobRequest;
}
<div>
    <h3>İş <span class="badge text-bg-secondary">@jobRequest.JobTitle</span></h3>
    <h4>Müşteri İsmi <span class="badge text-bg-secondary">@jobRequest.RequestedBy</span></h4>
    <h5>Ne Zaman İstendi <span class="badge text-bg-secondary">@jobRequest.RequestDate</span></h5>
    <h5>Yapılacak iş sayısı <span class="badge text-bg-secondary">@jobRequest.Jobs?.Count()</span></h5>

</div>
@if (@Model.Count() >= 0)
{
    @foreach (var jb in @Model)
    {
        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne"
                        aria-expanded="true" aria-controls="collapseOne">
                        @jb.ProjectName
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        @jb.Budget
                        @jb.Amount
                        @jb.Localiton
                        @jb.FinishDate
                        @jb.StartDate
                    </div>
                </div>
            </div>
        </div>
    }

}
else
{
    <div>
        <div class="alert alert-success" role="alert">
            Hiçbir iş yok lütfen iş ekleyin
        </div>
        <button asp-action="Crate" asp-controller="Job" asp-route-jobRequestId="@jobRequest.Id" type="button" class="btn btn-primary">Yeni İş Ekle</button>
    </div>

}
